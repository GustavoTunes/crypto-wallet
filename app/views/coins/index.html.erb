<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.count) %></h1>

<table class="table table-hover table-light">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name t("icon")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr> 
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: 25 %></td>
        <td><%= link_to t("links.show"), coin, class: "text-decoration-none" %></td>
        <td><%= link_to t("links.edit"), edit_coin_path(coin), class: "text-decoration-none" %></td>
        <td><%= link_to t("links.delete"), coin, method: :delete, data: { confirm: t("messages.confirm") }, class: "text-decoration-none" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("links.back"), root_path, class:"btn btn-secondary" %>
<%= link_to t("links.new_currency") , new_coin_path, class:"btn btn-primary" %>
